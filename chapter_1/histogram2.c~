#include <stdio.h>
int main(){
    int counts[126];
    int i,c,j,k;
   
    for (i = 0; i < 126; ++i){
        counts[i] =0;
    }

    while((c=getchar())!=EOF){
        ++counts[c];
    }

    int max = 0;
for (i = 1; i < 126; i++) {
    if (counts[i] > max)
        max = counts[i];
}
    
for (i = 32; i < 126; i++) {
    if (counts[i] > 0) {           // only print lengths that exist
        printf("%c: ", i);     
        for (j = 0; j < counts[i]; j++)
            printf("* ");
        printf("\n");
    }
}
printf("   ");
for (k =0; k<max; ++k)
    printf("%d ",k);


printf("\n A histogram of the frequencies of letters in the typed sentence");
}


